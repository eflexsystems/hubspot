                                title: 'Rework & Repair'
                            })
                        
                        .col-12.col-lg
                            +card ({
                                name: 'card7',
                                src: 'https://picsum.photos/400/200',
                                title: 'Digital Twin'
                            })

                    .row.no-gutters
                        .col-12.col-lg
                            +card ({
                                name: 'card8',
                                text: 'Incorporate vision systems to inspect and manage images.'
                            })
                        
                        .col-12.col-lg
                            +card ({
                                name: 'card9',
                                src: 'https://picsum.photos/400/200',
                                title: 'Serial Number, Batch, & Lot Marriage'
                            })

                .col-12.col-lg-6
                    +card ({
                        name: 'card10',
                        title: 'Traceability & Genealogy',
                        icon: 'fas fa-chart-bar text-primary',
                        subTitle: 'Compliance & Regulation Requirements'
                    })
            
            //- Capabilities - Business Intelligence
            .row.no-gutters
                .col-12.col-lg-6
                    +card ({
                        name: 'card11',
                        title: 'Business Intelligence',
                        icon: 'fas fa-chart-bar text-primary',
                        subTitle: 'Powered by MIP Data'
                    })
                .col-12.col-lg-6
                    .row.no-gutters
                        .col-12.col-lg
                            +card ({
                                name: 'card12',
                                src: 'https://picsum.photos/400/200',
                                title: 'Root Cause Analysis & Continuous Improvement'
                            })
                        
                        .col-12.col-lg
                            +card ({
                                name: 'card13',
                                src: 'https://picsum.photos/400/200',
                                title: 'Andon'
                            })
                    .row.no-gutters
                        .col-12.col-lg
                            +card ({
                                name: 'card14',
                                src: 'https://picsum.photos/400/200',
                                title: 'Production Visibility'
                            })
                        
                        .col-12.col-lg
                            +card ({
                                name: 'card15',
                                src: 'https://picsum.photos/400/200',
                                title: 'Machine Monitoring / OEE'
                            })

    //- General Flexibility
    .container.py-3
        .p-3.p-md-5
            .row
                //- Main Features - Simple Startup Bullets
                // Seperate These more
                .col-12.col-lg.py-3.py-lg-0
                    i.fas.fa-cloud-upload-alt.fa-3x.mb-4
                    h5.text-uppercase
                        +rawHtml ({
                            name: 'h1_flexibility',
                            value: 'Cloud or Local Storage'
                        })
                    p
                        +rawHtml ({

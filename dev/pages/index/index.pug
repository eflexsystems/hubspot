//- index.pug
extends ../../templates/_template.pug

block script
    //- slick-carousel
    script( type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js')
    script( type='text/javascript' )
        include ./script.js

block content
    //- Components being used.
    include ../../components/_rawHtml.pug
    include ../../components/_cta.pug
    include ../../components/_image.pug
    include ../../components/_card.pug
    
    //- make GM smaller and add in later
    - var clients = ['GM_05', 'GE-Healthcare', 'Snap-on', 'Nissan', 'Gatan', 'Flexngate', 'Faurecia', 'Panasonic', 'Mueller']

    //- masthead container
    //- Top padding for fixed header module
    .position-relative.w-100.py-5( style='min-height: 40rem' )
        .parallax-window( d
            data-parallax="scroll" 
            data-natural-width="1200"
            data-natural-height="800"
            data-image-src="https://picsum.photos/1200/800" 
            data-speed=.2
            )

        //- Background Image
        .w-100.h-100.position-absolute(style= 'top: 0; clip-path: inset(0 0 0 0);')
            

        //- Home Content
        .w-100.h-100
            
            .container.h-100.pt-5
                .row.h-100

                    //- Masthead Introduction
                    .col-12.col-lg-6
                        .d-flex.flex-column.justify-content-around.h-100.py-4
                            .p-3.p-md-5
                                .d-flex.flex-column
                                    h1.display-1.text-uppercase.text-white.text-break.text-lg-nowrap.mb-4( style="hyphens: auto" )
                                        +rawHtml ({
                                            name: 'title_masthead',
                                            value: 'Solve the Manufacturing Data Gap.'
                                        })

                                    p.lead.text-white
                                        +rawHtml ({
                                            name: 'desc_masthead',
                                            class: 'lead text-white',
                                            value: 'The manufacturing industry is poised for massive change and disruption. Beat the competition with eFlex’s Manufacturing Integrated Platform.'
                                        })

                            //- Masthead CTAs            
                            .row
                                .col
                                    .p-3.p-md-5
                                        .row
                                            .col-12.col-md.mb-3.mb-lg-0

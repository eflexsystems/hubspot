    .bg-gray-800
        .container.py-3
            .p-3.p-md-5
                #carousel-updates.slick-carousel.carousel-dots-light.pb-3
                    mixin update(index)
                        div
                            .p-3.p-md-5
                                .row.align-items-center
                                    .col-12.col-lg-6
                                        h2.display-1.text-uppercase.text-white.text-break.mb-0
                                            +rawHtml ({
                                                name: 'title_update' + index,
                                                value: 'Lorem ipsum dolor sit amet consectetur'
                                            })
                                    .col-12.col-lg-6
                                        h4.text-uppercase.text-white
                                            +rawHtml ({
                                                name: 'h_update' + index,
                                                value: 'Lorem Ipsum Dolor Sit.'
                                            })
                                        p.lead.text-white.mb-5

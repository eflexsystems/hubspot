//- solutions/_template.pug
extends ./_template.pug

block script
    //- slick-carousel
    script( type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js')
    
    script.
        let scrollResponsiveHeader = true;

block content
    //- Components being used.
    include ../components/_rawHtml.pug
    include ../components/_cta.pug
    include ../components/_image.pug

    //- Masthead Container
    .position-relative.d-flex.flex-column.justify-content-center.pt-5( style='min-height: 40rem' )

        //- Home Content
        .container.h-100.py-5
            .row.h-100

                //- Masthead Introduction
                .col-12.col-lg-6
                    .d-flex.flex-column.justify-content-around.h-100
                        .p-3.p-md-5
                            .d-flex.flex-column
                                h1.display-1.text-uppercase.text-white.text-break.text-lg-nowrap.mb-( style="hyphens: auto" )
                                    +rawHtml ({
                                        name: 'title_masthead',
                                        value: 'Solution Title'
                                    })

                                p.lead.text-white.mb-5
                                    +rawHtml ({ 
                                        name: 'desc_masthead',
                                        class: 'lead text-white',
                                        value: 'Solution sub-title insert here.'
                                    })

                                //- Masthead CTA          
                                +cta ({
                                    name: 'secondaryCta',
                                    variant: 'outline-white'
                                })

        //- Background Image
        .parallax-window.position-absolute.h-100.w-100(
            style='top: 0; box-sizing: border-box; pointer-events: none'
            data-parallax="scroll" 
            data-natural-width="1200"
            data-natural-height="800"
            data-image-src='https://picsum.photos/800/600'
            data-speed=.2
            )
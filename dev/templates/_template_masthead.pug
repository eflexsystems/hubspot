//- solutions/_template_masthead.pug
extends ./_template.pug

block script
	//- slick-carousel
	script( type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js')
	
	script.
		let scrollResponsiveHeader = true;

block variables
	- var mastheadHeight = '40rem'

block content
	//- Components being used.
	include ../components/rawHtml/_rawHtml.pug
	include ../components/cta/_cta.pug
	include ../components/image/_image.pug
	include ../components/parallax/_parallax.pug

	//- Masthead Container
	.d-flex.flex-column.align-items-center.justify-content-end.position-relative.pt-5( style='height: ' + mastheadHeight )

		block mastheadImage
			+parallax ({
				name: 'imageSrc_masthead'
			})

		block masthead
			//- Home Content
			.container.h-100.py-5
				.row.h-100

					//- Masthead Introduction
					.col-12.col-lg-6
						.d-flex.flex-column.justify-content-end.h-100
							.p-3.p-md-5
								.d-flex.flex-column
									h1.display-1.text-uppercase.text-white.text-break.text-lg-nowrap.mb-( style="hyphens: auto" )
										+rawHtml ({
											name: 'title_masthead',
											value: 'Masthead Title'
										})

									p.lead.text-white.mb-5
										+rawHtml ({ 
											name: 'desc_masthead',
											class: 'lead text-white',
											value: 'Solution sub-title insert here.'
										})

									//- Masthead CTA          
									+cta ({
										name: 'secondaryCta',
										variant: 'outline-white'
									})

//- Components
//- Image Wallpaper 5

mixin image-wallpaper-5(index)
  .w-100.position-relative.h-half
    // Image
    .w-100.h-100.img-clip.position-absolute.r-0.overflow-hidden.img-inset-wide.opacity-20.
      {% set class = "position-absolute r-0 #{position}" %}
      {% module "Wallpaper_#{index}", label="Wallpaper_#{index}", path='/_eflex/components/image' %}
    // Blend Exclusion
    .w-100.h-100.position-absolute.opacity-50
      .blend-exclusion-gray.w-100.h-100
    // Blend Color
    .w-100.h-100.position-absolute
      .blend-color-brand-dark.w-100.h-100
    // Blend Multiply
    .w-100.h-100.position-absolute
      .blend-multiply-brand.w-100.h-100.opacity-70
    // Content
    .w-100.h-100
      .d-flex.flex-column.justify-content-center.align-items-center.h-100
        .w-lg-50.w-100.flex-fill.d-flex.flex-column.justify-content-center.z-index-2.p-5
          h3.text-white.text-center.text-lg-left.text-shadow.mb-3.
            {% raw_html "Wallpaper_Title_#{index}", label="Wallpaper_Title_#{index}", value="{{ heading_var }}" %}
          h5.text-white.text-center.text-lg-left.text-shadow.mb-5.
            {% raw_html "Wallpaper_Body_#{index}", label="Wallpaper_Body_#{index}", value="{{ title_var }}" %}
          .w-100
            .w-md.mx-auto.mx-lg-0.
              {% cta "request_demo" label='Primary CTA' guid='#{guid}' %}
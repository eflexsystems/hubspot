// Components
// Carousel

mixin carousel-2(index)
  #carousel2.carousel.slide.w-100.my-4( data-ride="carousel" data-interval="4000")
    .carousel-inner.d-flex.justify-content-center.overflow-visible.w-100.px-3.px-lg-6.mx-auto( role="listbox")
      mixin carousel-item(index)
        if active
          .carousel-item.w-lg.min-h-half.m-2.active
            .d-flex.flex-column.w-lg.h-100.bg-white.position-relative.shadow-sm.p-4.opacity-0
              .w-lg
                p.mb-5.
                  {% raw_html "Carousel_Testimonial_Body_#{index}" label="Carousel_Testimonial_Body_#{index}", value='{{ paragraph_var }}' %}
              .d-flex.flex-column.mt-auto
                p.w-lg.text-primary.font-weight-bold.mb-0.
                  {% raw_html "Carousel_Testimonial_Name_#{index}" label="Carousel_Testimonial_Name_#{index}", value='John Smith' %}
                p.w-lg.font-italic.mb-0.
                  {% raw_html "Carousel_Testimonial_Career_#{index}" label="Carousel_Testimonial_Career_#{index}", value='Lumber Jack for Canadian Forest Reserves' %}
              
        else
          .carousel-item.w-lg.min-h-half.m-2
            .d-flex.flex-column.w-lg.h-100.bg-white.position-relative.shadow-sm.p-4.opacity-0
              .w-lg
                p.mb-5.
                  {% raw_html "Carousel_Testimonial_Body_#{index}" label="Carousel_Testimonial_Body_#{index}", value='{{ paragraph_var }}' %}
              .d-flex.flex-column.mt-auto
                p.w-lg.text-primary.font-weight-bold.mb-0.
                  {% raw_html "Carousel_Testimonial_Name_#{index}" label="Carousel_Testimonial_Name_#{index}", value='John Smith' %}
                p.w-lg.font-italic.mb-0.
                  {% raw_html "Carousel_Testimonial_Career_#{index}" label="Carousel_Testimonial_Career_#{index}", value='Lumber Jack for Canadian Forest Reserves' %}
              

      - var active = true
      +carousel-item(1)

      - var active = false
      - var n = 2
      while n <= carouselNumber
        +carousel-item(n++)

    a.carousel-control-prev( href="#carousel2" role="button" data-slide="prev")
      span.icon-arrow-left-sm.icon-xl.text-gray-dark
      span.sr-only Previous
    a.carousel-control-next.text-faded( href="#carousel2" role="button" data-slide="next")
      span.icon-arrow-right-sm.icon-xl.text-gray-dark
      span.sr-only Next
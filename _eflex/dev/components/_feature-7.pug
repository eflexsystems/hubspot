//- Components
//- Feature 7

mixin feature-7(index)
  .w-half.m-4
    .d-flex.flex-column
      .h-sm.h-lg-xs.img-clip-rounded.mb-4.
        {% set class = "w-100 h-auto" %}
        {% module "Image_#{index}" path='/_eflex/components/image' %}
      h5.
        {% raw_html "Feature_#{index}_Heading" value='{{ heading_var }}' %}
      p.
        {% raw_html "Feature_#{index}_Body" value='{{ paragraph_var }}' %}
mixin feature-2(index)
  .tab-card.w-half.slick-slide.shadow-sm.h-shadow.rounded.m-2
    .d-flex
      .icon-xl.text-primary.m-4(class!='{% text \"Feature_' + index + '_Icon\", value="icon-cobot", no_wrapper=True %}')
      .d-flex.flex-column.mr-4.my-auto.py-4
        h6.mb-2
          | {% raw_html "Feature_#{index}_Heading", label="Feature_#{index}_Heading", value='{{ heading_var }}' %}
        p
          | {% raw_html "Feature_#{index}_Text", label="Feature_#{index}_Text", value='{{ body-sm_var }}' %}
mixin layout-1(index)
  .d-flex.align-items-center.flex-lg-row.flex-column
    .res-half.m-5.
      {% set class = "res-xl img-fluid rounded my-4" %}
      {% module "Image_#{index}" path='/_eflex/components/image' %}
    .d-flex.flex-column.m-5
      h3.text-primary.text-lg-left.text-center.mb-4.
        {% raw_html "Title_#{index}" value="{{ heading_var }}" %}
      h5.w-half.text-lg-left.text-center.mb-4.
        {% raw_html "Heading_#{index}" value="{{ heading_var }}" %}
      p.w-half.text-lg-left.text-center.
        {% raw_html "Body_#{index}" value="{{ body_var }}" %}
      .w-md.mx-auto.mx-lg-0.my-3.

//- global_header.pug 

#global_header.navbar.navbar-expand-lg.navbar-light.bg-white.fixed-top.row.no-gutters.justify-content-center.p-4.p-lg-3( style="box-shadow: 0px 0px 25px #00274e10" )
  .logo.d-flex.flex-column.justify-content-center.pr-lg-3( onclick='window.location="https://www.eflexsystems.com"')
    | {% image "eFlex_Logo" label='eFlex Systems Logo', alt='eFlex Systems Logo', src='https://cdn2.hubspot.net/hubfs/490686/Logos/eFlexSystems-logo.png', style="width:100%" %}
  button.navbar-toggler.ml-auto( type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
    span.navbar-toggler-icon
  .collapse.navbar-collapse.p-lg-0.mt-auto.mr-lg-4( id="navbarSupportedContent")
    .d-flex.flex-column.ml-lg-auto
      .d-flex.ml-lg-auto
        ul.d-flex.flex-lg-row.flex-column.my-4.my-lg-0.pl-0
          mixin nav-link-small(index, margin)
            li.nav-item.text-nowrap.small.h-opacity.mb-1(class=margin)
              .
                {% if module.nav_link_small_#{index}_link.url.type is equalto "EMAIL_ADDRESS" %}
                  {% set href = "mailto:" + href %}
                {% endif %}
                <a class="header-link p-0 text-gray-dark" style="cursor: pointer"
                {% if module.nav_link_small_#{index}_link.open_in_new_tab %}target="_blank"{% endif %} href="{{ module.nav_link_small_#{index}_url.href }}"
                {% if module.nav_link_small_#{index}_link.no_follow %}rel="nofollow"{% endif %}
                >
                {% inline_text field="nav_link_small_#{index}_text" value="{{ module.nav_link_small_#{index}_text }}" extra_classes="text-gray-dark" %}
                </a>

          - var n = 1
          while n <= 2
            +nav-link-small(n++, 'mr-3')
            small.text-gray.mr-3.d-lg-inline-block.d-none |
          .d-flex
            small.header-link.text-gray-dark.mr-2 Call Us:
            a.header-link.text-gray-dark.small.h-opacity.m-0(href='tel:18334633539')
              | 833-463-3539
      .d-flex.flex-lg-row.flex-column.align-items-center.my-1
        ul.navbar-nav.w-100.mr-lg-3.ml-lg-auto
          mixin nav-item(index)
            li.nav-item.text-nowrap.dropdown.mx-lg-3
              div
                .
                  <a class="d-flex nav-link pl-3 pl-lg-0 my-1 my-lg-0 p-lg-0 dropdown-toggle" id="navBar" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                  {% if module.nav_item_#{index}_url.open_in_new_tab %}target="_blank"{% endif %}
                  {% if module.nav_item_#{index}_url.no_follow %}rel="nofollow"{% endif %}
                  >
                  {% inline_text field="nav_item_#{index}_text" value="{{ module.nav_item_#{index}_text }}" extra_classes="p text-brand text-uppercase font-weight-bold" %}
                  <a class="position-absolute d-none d-lg-block h-100 w-100 t-0" onclick='window.location="{{ module.nav_item_#{index}_url.href }}"' style="cursor: pointer;" </a>
                  </a>
                .dropdown-menu.bg-none.p-lg-0( aria-labelledby='navBar')
                  .dropdown-bg.bg-white.px-3.pl-3.pl-lg-0.py-lg-5.rounded.shadow
                    .
                      {% simple_menu menu_tree="{{ module.ni_#{index}_simple_menu_1 }}" %}

          - var n = 1
          while n <= 4
            +nav-item(n++)

        .w-lg-md.m-4.m-lg-0.w-100
          | {% cta "free_demo" label='Primary CTA' guid='9de805d8-7399-4436-bf15-7250f18da14d' %}
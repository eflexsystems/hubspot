.block-fluid.row.no-gutters.justify-content-center.bg-gray-dark.pt-5.pb-2.m-0
  .d-flex.justify-content-center
    a.btn-link.icon-facebook.icon-lg.text-white.slick-slide.mr-4(href='https://www.facebook.com/eFlexsystem/')
    a.btn-link.icon-twitter.icon-lg.text-white.slick-slide.mr-4(href='https://twitter.com/eflexsystems')
    a.btn-link.icon-youtube.icon-lg.text-white.slick-slide.mr-4(href='https://www.youtube.com/user/eFlexSystems')
    a.btn-link.icon-linkedin.icon-lg.text-white.slick-slide.mr-4(href='https://www.linkedin.com/company/eflex-systems')
    a.btn-link.icon-mail.icon-lg.text-white.slick-slide(href='mailto:sales@eflexsystems.com')
.block-fluid.row.no-gutters.bg-gray-dark.text-white.p-5.m-0
  .col-lg-5.col-12.align-self-center
    .d-flex.flex-column.align-items-center
      p.mb-4 Sign up for our newsletter!
      .w-100.mb-2
        .w-lg.mx-auto
          | {% form "Newsletter Sub" form_to_use='88d506f3-9a11-4766-8908-6d552b4a548a', no_title=True %}
          
      small.text-gray.w-lg.text-center
        | {% inline_rich_text field="disclaimer" value="{{ module.disclaimer }}" %}
  .col-lg-3.col-12
    .d-flex.flex-column.align-items-lg-left.align-items-center.justify-content-start.text-lg-left.text-center
      .d-flex.flex-column.mb-5
        | {% inline_text field="heading_1" value="{{ module.heading_1 }}", extra_classes="font-weight-bold w-lg text-uppercase small mb-3" %}
        p.m-0.small {{ site_settings.company_name }}
        p.m-0.small {{ site_settings.company_street_address_1 }}
        p.m-0.small {{ site_settings.company_city }}, {{ site_settings.company_state }} 38306
      .d-flex.flex-column.mb-5
        | {% inline_text field="heading_2" value="{{ module.heading_2 }}", extra_classes="font-weight-bold w-lg text-uppercase small mb-3" %}
        | {% raw %}
        a.text-white.small.m-0(href='tel:18334633539')
          | 833 463 3539
        | {% endraw %}

        a.text-white.small.m-0(href='mailto: sales@eflexsystems.com') sales@eflexsystems.com

  .col-lg-4.col-12
    .d-flex.flex-column.align-items-lg-left.align-items-center.text-lg-left.text-center
      .d-flex.flex-column.text-white
        .
          {% inline_text field="heading_3" value="{{ module.heading_3 }}", extra_classes="font-weight-bold w-lg text-uppercase small mb-3" %}
          {# Link 1 #}
          {% set href = module.link_1_1.url.href %}
          {% if module.link_1_1.url.type is equalto "EMAIL_ADDRESS" %}
          {% set href = "mailto:" + href %}
          {% endif %}
        div
          mixin footer-link(index)
            div
              .
                <a href="{{ href }}" class="link small text-white"
                {% if module.link_1_#{index}.open_in_new_tab %}target="_blank"{% endif %}
                {% if module.link_1_#{index}.no_follow %}rel="nofollow"{% endif %}
                >
                {% inline_text field="link_1_#{index}_text" value="{{ module.link_1_#{index}_text }}" %}
              </a>

          +footer-link('1')
          +footer-link('2')
          +footer-link('3')
          +footer-link('4')
          +footer-link('5')
          +footer-link('6')
          +footer-link('7')


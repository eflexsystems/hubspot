    .d-flex.flex-column.vh-100.w-100.position-absolute
      .d-flex.flex-column.align-items-center.text-white.mt-auto.mx-auto.mb-4
        small.text-uppercase.opacity-85.mb-n2 Scroll Down
        span.icon-arrow-down-sm.icon-xl.position-relative(style="animation: 1s ease-in-out infinite forwards bounce;")

    .row.no-gutters.align-self-center.align-items.center.position-absolute.pb-5.m-0
      .col-12
        h1.text-white.font-weight-bold.text-center.text-left.text-shadow
          | {% raw_html "Title" value='The Manufacturing Integrated Platform' %}
          .position-absolute.d-none.d-lg-block( style="top: -39px; width: 4rem; right: 132px;")
            | {% image "MIP_Logo" label='MIP Logo Partial', alt='MIP Logo', src='https://cdn2.hubspot.net/hubfs/490686/_site/photos/logos/Logo_mip-partial.png', style="width: 100%;" %}

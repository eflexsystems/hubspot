          | {% raw_html "Callout" value='The next-generation of process control and smart manufacturing.' %}
        .row.no-gutters.justify-content-lg-center.justify-content-left.align-items-center.mt-5.m-0
          .col-lg-4.col-12.px-3.py-2
            | {% cta "request_demo" label='Primary CTA' guid='78df544c-4f22-4120-aacd-56ee4c84b604' %}
          .col-lg-4.col-12.px-3.py-2
            .cta-outline
              | {% cta "contact_us" label='Secondary CTA' guid='a8fe13fb-36a0-45ae-ad0f-4728625ebdb4' %}

  include blocks/_block-0.pug
  include blocks/_block-1.pug
  include blocks/_block-2.pug
  include blocks/_block-3.pug
  include blocks/_block-4.pug
  include blocks/_block-5.pug
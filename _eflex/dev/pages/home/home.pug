//- home.pug
extends ../../templates/_template.pug

block content
  | {% module "module_15656297764774" path="/_eflex/dist/components/testing", label="global_header" %}
  .flex-fill.d-flex.justify-content-center.flex-column
    // Video
    .row.no-gutters
      .col
        .img-clip-rounded.position-absolute.w-100.vh-100
          .video
            video( autoplay="autoplay" muted="muted" loop="loop" playsinline)
              source(src="https://cdn2.hubspot.net/hubfs/490686/_site/videos/JEM_Preview.mp4")
    // Blend Multiply
    .row.vh-100.no-gutters.m-0
      .col-12
        .black-fade.opacity-50.w-100.h-100

//- kitting-brochure.pug
extends ../../../../templates/_template.pug
include ../../../../components/_list.pug

block script
  script( src="{{ get_public_template_url('/_eflex/script/form.js') }}")

block content
  .d-flex.flex-column.justify-content-center.align-items-center.w-100.overflow-hidden
    .w-100.position-relative
      // Image
      .w-100.h-100.img-clip.position-absolute.overflow-hidden.img-inset-wide.
        {% set class = "position-absolute #{position}" %}
        {% module "Wallpaper_0_1" path='/_eflex/components/image' %}
      // Blend Color
      .w-100.h-100.position-absolute
        .w-100.h-100.blend-color-white
      // Blend Multiply
      .w-100.h-100.position-absolute
        .w-100.h-100.blend-multiply-primary
      // Content
      .w-100
        .d-flex.flex-lg-row.flex-column.justify-content-center.w-100.h-100.py-5.px-3.pl-lg-5.pl-xl-6
          .text-shadow.d-flex.flex-column.justify-content-start.align-items-center.align-items-lg-start.h-100.z-index-1.mb-6.mb-lg-0.mx-lg-auto
            h5.w-half.text-orange.mb-2.
              {% raw_html "Page_Title" value='{{ heading_var }}' %}
            h3.w-half.text-white.font-weight-bold.text-lg-nowrap.mb-5.
              {% raw_html "Page_Subtitle" value='{{ title_var }}' %}
            p.text-white.w-half.mb-0.pr-lg-5.
              {% raw_html "Page_Body_1_1" value='{{ title_var }}' %}
            .bullets-white.text-white.w-half
              - var n = 5
              +list('1')
            // Image
            .w-half.img-clip.overflow-hidden.pr-5.
              {% set class = "w-100 h-100" %}
              {% module "Image_1_1" path='/_eflex/components/image' %}
            
          .d-flex.mx-auto.mx-lg-0.ml-lg-auto
            // Form
            #download_request.form.pt-5.w-half.bg-white.rounded-lg.content-box.position-relative.p-5
              | {% form "Download Request" form_to_use='bad83811-531c-41e2-976a-18114e475497', title='Download Request' %}

              // Validation Alert
              #hs-errors-validation-popup.position-absolute.w-lg.bg-red.rounded.opacity-85.r-5( style="bottom: 7rem; display: none;" )
                .d-flex
                  .icon-caution.icon-lg.text-white.p-3
                  p.text-white.text-left.w-md.p-3.mb-0 Please go back and complete the required fields.
                  #hs-errors-validation-x.icon-x-sm.icon-lg.text-white( style="cursor: pointer" )

              .d-flex.w-100
                // Prev
                button#form-prev-1.btn-outline-primary.rounded-pill.w-md.p-2.slick-slide.ml-auto.mr-3
                  .d-flex.justify-content-center.position-relative
                    .icon-arrow-left-sm.position-absolute.l-0( style = "font-size: 1.5rem")
                    p.m-0 Back
                button#form-prev-2.btn-outline-primary.rounded-pill.w-md.p-2.slick-slide.ml-auto.mr-3
                  .d-flex.justify-content-center.position-relative
                    .icon-arrow-left-sm.position-absolute.l-0( style = "font-size: 1.5rem")
                    p.m-0 Back

                // Next
                button#form-next-1.btn-primary.rounded-pill.w-md.p-2.slick-slide.ml-auto
                  .d-flex.justify-content-center.position-relative
                    p.m-0 Next
                    .icon-arrow-right-sm.position-absolute.r-0( style = "font-size: 1.5rem")
                button#form-next-2.btn-primary.rounded-pill.w-md.p-2.slick-slide
                  .d-flex.justify-content-center.position-relative
                    p.m-0 Next
                    .icon-arrow-right-sm.position-absolute.r-0( style = "font-size: 1.5rem")
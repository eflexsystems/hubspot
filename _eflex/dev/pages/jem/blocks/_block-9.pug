
include ../../../components/images/_image-half.pug
include ../../../components/layouts/_layout-5.pug

- var index = '9_1'
.d-flex
    .w-100.position-relative
        // Image
        .w-100.h-100.overflow-hidden.position-absolute.r-0.img-inset-wide.opacity-30.
            {% set class = "position-absolute r-0" %}
            {% module "Wallpaper_#{index}", label="Wallpaper_#{index}", path='/_eflex/components/image' %}
        // Blend Exclusion
        .w-100.h-100.position-absolute.opacity-50
            .blend-exclusion-gray.w-100.h-100
        // Blend Color
        .w-100.h-100.position-absolute
            .blend-color-brand-dark.w-100.h-100
        // Blend Multiply
        .w-100.h-100.position-absolute
            .blend-multiply-brand-dark.w-100.h-100.opacity-85
        // Content
        .w-75.h-100.mx-auto.py-5
            .d-flex.justify-content-center.align-items-center.flex-lg-row.flex-column.p-5.p-lg-0
                .w-half.h-auto.p-5.p-lg-0.m-lg-4.z-index-2.
                    {% set class = "w-half h-auto" %}
                    {% module "Image_#{index}" path='/_eflex/components/image' %}
                .text-white.z-index-2
                    .d-flex.flex-column.justify-content-center.h-100.m-lg-5
                        h3.text-white.w-lg.mb-4.
                            {% raw_html "Heading_#{index}", label="Heading_#{index}", value="{{ heading_var }}" %}
                        p.w-100.w-lg.
                            {% raw_html "Body_#{index}", label="Body_#{index}", value="{{ body_var }}" %}
                        .w-lg.my-5.
                            {% cta "CTA_#{index}", label='CTA_#{index}', guid='#{guid}' %}